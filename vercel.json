{
  "version": 2,
  "name": "electralens-fullstack",
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "pythonVersion": "3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/",
      "dest": "/web/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/web/$1"
    }
  ],
  "env": {
    "VERCEL": "1",
    "VERCEL_ENV": "production", 
    "API_VERSION": "4.0.0",
    "FORCE_REBUILD": "true",
    "AUTH_ENABLED": "true"
  },
  "functions": {
    "api/main.py": {
      "maxDuration": 60
    }
  }
}